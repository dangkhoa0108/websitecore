@model websitecore.ViewModel.CategoryViewModel
@{
    Layout = null;
}
<div class="col-md-3 col-sm-6">
    <div class="footer-menu">
        <h2 class="footer-wid-title">Categories</h2>
        <ul>
            @foreach (var item in Model.lstCategory)
            {
                <li><a href="/ProductByCategory?Id=@item.CategoryID">@item.CategoryName</a></li>
            }
        </ul>
    </div>
</div>